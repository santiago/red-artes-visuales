      | #{taller_base.nombre}
      span.mask
    a#crear(href='/talleres')
      | Talleres
      span.mask

  .content
    form
      ul
        li
          .element
            label Nombre actividad: 
            input(name="nombre", type="text", value='#{taller_base.nombre}', readonly='readonly')

        li
          .element
            label DescripciÃ³n: 
            textarea(name="desc", readonly='readonly') #{taller_base.descripcion}

        li
          .element
            label Equipamiento:
            input(type='text', value='#{taller.equipamiento_nombre}', readonly='readonly')
        li
          .element
            label Fecha:
            input#fecha(type='text', value='#{taller.fecha.toDateString()}', readonly='readonly')

      ul(style='display:none;')
        li
          .element
            label Resultados generales: 
            textarea(name = "resultados")

        li
          .element
            label AutoevaluaciÃ³n del creativo: 
            textarea(name = "autoeval_creativo")

        li
          .element
            label Observaciones externas: 
            textarea(name = "observ_externas")

        li
          .element
            label Fotos:

        li
          .element
            label Videos:

    .navegacion_interna.list_header
      ul
        li 
          a(href="#") General
        li 
          a(href="#") Participantes
        li 
          a(href="#") Evaluacion & Resultados
        li 
          a(href="#") Fotos / Videos
        li
          a(href="#", id="agrega_part", class="internal_right_tab") Agregar participante

      .tabs_container
        .tab_content#general
          ul
            li
              .element
                label Objetivos: 
                textarea(name="objetivos", readonly='readonly') #{taller_base.objetivos})

            li
              .element_checkbox_label
                label Metodolog&iacute;as: 
                .options
                  -var i=0
                  each metod in params.metodologias 
                    - var checked = undefined; 
                    .option(class='#{i%3 == 0 ? "row" : "" }')
                      - if (taller_base.metodologias.indexOf(metod) > -1) 
                        input(name="metod", type="checkbox", value="#{metod}", checked='#{checked}', disabled='disabled')
                      - else
                        input(name="metod", type="checkbox", value="#{metod}", disabled='disabled')
                    label.radio_text #{metod}
                    -i++

            li
              .element_checkbox_label
                label Habilidades: 
                .options
                  -var i=0
                  each h in params.habilidades 
                    - var checked = undefined; 
                    .option(class='#{i%3 == 0 ? "row" : "" }')
                      - if (taller_base.habilidades.indexOf(h) > -1) 
                        input(name="metod", type="checkbox", value="#{h}", checked='#{checked}', disabled='disabled')
                      - else
                        input(name="metod", type="checkbox", value="#{h}", disabled='disabled')
                    label.radio_text #{h}
                    -i++
        .tab_content#participantes(style='display:none;')
          .listado_participantes
            ul
            // !=partial('partials/lista_participantes',{ participantes: participantes})
        .tab_content#resultados(style='display:none;')
          .listado_participantes
            ul
            // !=partial('partials/lista_participantes',{ participantes: participantes})
        .tab_content#fotos_video(style='display:none;')
          .listado_participantes
            ul
