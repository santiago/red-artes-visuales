article#participante
  form
    h1 Registro participante
    
    ul
      li
        .element
          label Nombre completo:      
          input(name="nombre",id="nombre", type="text")

    .element
      label Edad:
      select(name="edad")
        each edad in edades
          - var select=null; 
          - if (edad == model.edad) select='selected';
          option(value=#{edad}, selected=#{select}) #{edad}

    .element
      label Comuna:
      select(name="comuna")
        each comuna in comunas
