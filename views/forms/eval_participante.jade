article#evaluacion 
  header
    .header-content
      label Equipamiento
      p.nombre #{taller.equipamiento_nombre}
      label Taller
      p.nombre #{taller.nombre}
      label Fecha
      p.nombre #{taller.fecha}
      label Participante
      p.nombre #{participante.nombre}
      label Evaluaci√≥n
      p.nombre por #{creativo.nombre}
      
    
  .list_header
    ul
      li
        a(href="/evaluacion/new", class='#{articulo == "FormEvaluacion" ? "activo" : null}')
          | #{participante.nombre}
          span.mask

  form       
    input(type="hidden", id="taller_id", name="taller_id", value="#{taller._id}")
    input(type="hidden", id="creativo_id", name="creativo_id", value="#{creativo._id}")
    input(type="hidden", id="fecha", name="fecha", value="#{taller.fecha}")
    input(type="hidden", id="p_id", name="p_id", value="#{participante._id}")

    .evaluaciones
      .eval_header
        p Bajo
        p &nbsp;
        p Medio
        p &nbsp;
        p Alto
 
      ul
        each habilidad in params.habilidades
          li
            .evaluacion
              label #{habilidad}
              input(name="i_#{habilidad}", value="1", type="radio") 
              label.radio_eval
              input(name="i_#{habilidad}", value="2", type="radio")
              label.radio_eval
              input(name="i_#{habilidad}", value="3", type="radio") 
              label.radio_eval
              input(name="i_#{habilidad}", value="4", type="radio")
              label.radio_eval
              input(name="i_#{habilidad}", value="5", type="radio") 
              label.radio_eval
 
      button(class="submit") Envia
