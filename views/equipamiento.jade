      li
        .element
          label Cartelera:
          input(name="cartelera", readonly='readonly',  id="cartelera", type="text" , value='#{equipamiento.cartelera}')

      li
        .element
          label Tel&eacute;fono Info:
          input(name="telefono_info", readonly='readonly',  id="zona", type="text", value='#{equipamiento.telefono_info}')

      li
        .element
          label Perifon&iacute;a:
          input(name="perifonia", readonly='readonly',  id="zona", type="text", value='#{equipamiento.perifonia}')

      li
        .element
