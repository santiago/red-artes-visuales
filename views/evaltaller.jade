- var edit = false
article#taller
  input(type="hidden", id="taller_id", value="#{taller._id}")
  header
    .header-content
      label Equipamiento
      p.nombre #{taller.equipamiento_nombre}
      label Taller
      p.nombre #{taller.nombre}
      label Fecha
      p.nombre #{taller.fecha}

  .list_header
    ul
      li
        a#tab-participantes(href="/taller/#{taller._id}", class='#{articulo == 'Taller' ? "activo" : null }') 
          | Participantes
          span.mask
      li
        //a#tab-fotos(href="/talleres/#{taller._id}/fotos", class='#{articulo == 'Fotos' ? "activo" : null }') 
        a#tab-fotos(href="#", class='#{articulo == 'Fotos' ? "activo" : null }') 
          | Fotos / Videos
          span.mask
      li
        a#tab-seguimiento(href="/taller/#{taller._id}/evaltaller", class='#{articulo == 'FormEvalTaller' ? "activo" : null }') 
          | Evaluación taller 
          span.mask

  .list_body
    form
      ul
        li
          .element
            label Resultados generales:
            textarea(name='resultados_generales') #{taller.resultados}
          
        li
          .element
            label Autoevaluación creativo:
            textarea(name='autoeval_creativo') #{taller.autoeval_creativo}
            
        li
          .element
            label Observaciones externas:
            textarea(name='observ_externas') #{taller.observ_externas}

        li
          .element
            button(class="submit") Enviar

