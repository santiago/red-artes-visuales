article#creativo
  .list_header
    a#listar(href="/admin/creativos",class='#{articulo == "Creativos" ? "activo" : null}')
      | Creativos
      span.mask
    a#crear(href="/admin/creativo/new", class='#{articulo == "FormCreativo" ? "activo" : null}')
      | Crear Creativo

    form(action="/admin/creativo",method="post")
      ul
        li
          .element
            label Nombre completo:      
            input(name="nombre",id="nombre", type="text")
 
        li
          .element
            label Email:      
            input(name="email",id="email", type="text")
 
        li
          .element
            label Telefono:      
            input(name="telefono",id="telefono", type="text")

        li
          .element
            label Titulo:      
            input(name="titulo",id="titulo", type="text")

        li
          .element
            label direccion
            textarea(name = "desc")
 
 
        li
          .element
            input(id = "submit", name="submit", type = "submit",value="Envia")


