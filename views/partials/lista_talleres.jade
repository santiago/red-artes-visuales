each taller in talleres_base
  li
    .taller_item(id='#{taller._id}')
      a.nombre(href='/talleres/#{taller._id}') #{taller.nombre}
    
      .equipamientosTaller(style='display:none;')
        .list_body
          ul
            -if(talleres.length)
              each n in equipamientosTaller
                li
            -else
              p.vacio No se han creado equipamientos para este taller
              button.submit Agregar Equipamiento